<div id="page-content">
<h2 class= "text-center mt-4"><%= @article.title%></h2>

  <div class="container">
  <div class="row justify-content-md-center">                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         
      <div class="col-8 mt-4">
      <div class="card text-center, shadow mb-5 bg-white rounded ">
      <div class="card-header font-italic">
        <%= @article.user.username if @article.user%>
        <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
      </div>
      <div class="card-body">
        <div class="card-text "><%= simple_format(@article.text) %></div> 
        <%= link_to "Edit", edit_article_path(@article), class:"btn btn-outline-dark " %>
        <%= link_to "Delete", article_path(@article), class:"btn btn-outline-danger",  method: :delete,
        data: { confirm: 'Are you sure?' } %>
      </div>
      <div class="card-footer text-muted">
        <small>Create <%= time_ago_in_words(@article.created_at) %> ago,
        edited <%=time_ago_in_words(@article.updated_at) %> ago</small>
      </div>
      </div>
    </div>
    </div>
    <%= link_to 'Back', articles_path %>



<h2>Comments</h2>
  <%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>


