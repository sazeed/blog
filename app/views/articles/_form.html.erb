<div class="container">
<%= render 'shared/errors' %>  
<%= form_with model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true do |form| %>
 
    <div class="row justify-content-center">
    <div class="col-10">
      <div class="form-group row">
        <%= form.label :title, class:"col-sm-2 col-form-label text-light" %>
        <div class="col-10">
        <%= form.text_field :title, class: "form-control shadow rounded ", placeholder: "Title of article" %>
        </div>
      </div>
    
      <div class="form-group row">
        <%= form.label :Description, class:"col-sm-2 col-form-label text-light" %>
        <div class="col-10">
        <%= form.text_area :text,rows:10, class: "form-control shadow rounded",placeholder: "Description of article" %>
        </div>
      </div>
    
      <div class="form-group row justify-content-center">
        <%= form.submit class: "btn btn-outline-light btn-lg" %>
      </div>
    
    <% end %>
  
    <%= link_to 'Back', articles_path, class: "text-white" %>
   
    </div>
  </div>
 </div>
