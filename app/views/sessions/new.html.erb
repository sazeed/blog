<div id="page-content">
  <h1 class= "text-center mt-4">Login for Bobby Blog</h1>

  <div class="container"> 
<%= form_with scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true do |form| %>
 
    <div class="row justify-content-center">
    <div class="col-10">
      
      <div class="form-group row">
        <%= form.label :Email, class:"col-sm-2 col-form-label text-light" %>
        <div class="col-10">
        <%= form.email_field :email, class: "form-control shadow rounded",placeholder: "Enter your Email" %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :password, class:"col-sm-2 col-form-label text-light" %>
        <div class="col-10">
        <%= form.password_field :password, class: "form-control shadow rounded",placeholder: "Enter your password" %>
        </div>
      </div>
    
      <div class="form-group row justify-content-center">
        <%= form.submit "Login" ,  class: "btn btn-outline-light btn-lg" %>
      </div> 
    
    <% end %>
  
    <%= link_to 'Back', articles_path, class: "text-white" %>
   
    </div>
  </div>
 </div>
</div>